.contact-map-section{
  background-color: $extra-lightgray-color;
}

#contact-map-wrapper{
  overflow: hidden;
  //@include transition-property(height);
  //@include transition-duration(0.4s);

  box-shadow:-1px -1px 1px 0px #999999;

  img{
    max-width: none;
  }
}


#contact-map-container{
  height: 400px;

  .marker{
    width: 60px;
    height: 75px;
    background: url(<%= asset_path("logos/ZURC-logo.png") %>) no-repeat center center;
    background-size: cover;
  }
}

input[type=submit]{
    cursor: pointer;
    @include transition-property(background-color);
    @include transition-duration(0.2s);

    &:hover{
        background-color: $orange-color;
    }
}