.contact-info-column{
  position: relative;
}

.contact-info-col-icon{
  //background-color: $contact-round-background-gray-color;
  border-radius: 50%;
  display: inline-block;
  height: 4rem;
  width: 4rem;
  vertical-align: top;
  position: absolute;
