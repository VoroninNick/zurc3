.contact-info-col-icon-img{
  width: 100%;
  height: 100%;
  //width: 40px;
  //height: 40px;
  position: relative;
  top: 12px;
  left: 12px;
}

.contact-info-col-header{
  @include page_section_title;

  &:after{
    content: "";
    display: block;
    width: 100%;
    height: 1px;
    background: #cccccc;
    //margin-top: -16px;
    margin-top: -12px;
    margin-bottom: 12px;
  }

}

.contact-info-col-content{
  margin: 0 0 0 rem-calc(92);
  //float: none !important;
  //display: inline-block;
  position: relative;

}


.contact-info-col-text{
    .phone{
        display: block;
    }
}

#contact-info-working-hours-column{
  #time-range, #days{
    display: block;
  }

  #time-range{
    color: $blue-color;
  }

  #tip{
    font-weight: 100;
    font-size: 0.8rem;

    &:before{
      position: absolute;
      display: inline;
      color: $primary-color;
      content: "*";
      left: -10px;
      font-size: 1rem;
      line-height: 1rem;
    }
  }
}

#contact-info-phones-column{
  .phone{
    span.brace, span.separator{
      color: $orange-color;
    }
  }
}

@media #{$large-up} {
  #address-p{
    span{
      display: block;
    }
  }
}

.simple_form{
  input, textarea {
    font-size: 1.3rem;
  }
  input:not([type=submit]), textarea {
    font-style: italic;
    font-weight: 500;
    box-shadow: inset 0 2px 2px rgba(0, 0, 0, 0.1);
    padding: 1rem;

    color: $blue-color;

    &:focus{
      color: $orange-color;
    }

    @include placeholder{
      //color: red;
      font-weight: 300;
    }
  }

  .notice{
      &.error{
          color: red;
      }
  }

  input{
    margin: 0;
    height: 60px;


    &.string, &.tel, &.email {
      background-color: $extra-lightgray-color;
    }
  }

  textarea{
    margin: 0;
    height: 283px;
    background-color: $extra-lightgray-color;
  }

  label{
    color: #206db1;
    margin: 0 0 2rem 0;
    font-weight: 100;
    font-size: 0.8rem;
    padding: 0 1rem;

    &:first-letter{
        text-transform: uppercase;
    }

    &.error{
        color: red;
    }
  }

  input[type=submit]{
    background-color: $blue-color;
    border: none;
    color: #fff;
    font-weight: 700;
    text-transform: uppercase;
    width: rem-calc(200);
    float: right;
  }

  input:not([type=submit]), textarea {
      &.error ~ label.input-label {
          display: none;
      }
  }
}



